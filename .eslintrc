{
    "rules": {
        "indent": [
            2,
            2
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-console" : [
            0
        ],
        "comma-dangle" : [
            0
        ]
    },
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "globals": {
        "chai": true,
        "expect": true
    },
    "extends": "eslint:recommended"
}
